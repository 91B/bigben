<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="dse-beans.xml"/>

    <bean id="bucketCache" class="org.apache.ignite.configuration.CacheConfiguration">
        <property name="name" value="bucketCache"/>
        <property name="backups" value="1"/>
        <property name="cacheMode" value="PARTITIONED"/>
        <property name="atomicityMode" value="ATOMIC"/>
        <property name="atomicWriteOrderMode" value="PRIMARY"/>
        <property name="readFromBackup" value="false"/>
        <property name="writeSynchronizationMode" value="PRIMARY_SYNC"/>
        <property name="cacheStoreFactory">
            <bean class="javax.cache.configuration.FactoryBuilder$SingletonFactory">
                <constructor-arg>
                    <bean class="com.walmartlabs.components.scheduler.core.BucketStore"/>
                </constructor-arg>
            </bean>
        </property>
        <property name="readThrough" value="true"/>
        <property name="writeThrough" value="true"/>
        <property name="writeBehindEnabled" value="true"/>
        <property name="writeBehindFlushFrequency" value="60000"/>
        <property name="writeBehindBatchSize" value="100"/>
        <property name="writeBehindFlushSize" value="100"/>
    </bean>

    <bean id="eventScheduler" class="com.walmartlabs.components.scheduler.core.EventScheduleScanner"/>
    <bean id="serviceConfiguration" class="org.apache.ignite.services.ServiceConfiguration">
        <property name="maxPerNodeCount" value="1"/>
        <property name="totalCount" value="1"/>
        <property name="name" value="EVENT_SCHEDULER_SERVICE"/>
        <property name="service" ref="eventScheduler"/>
    </bean>

    <bean id="igniteConfiguration" class="org.apache.ignite.configuration.IgniteConfiguration">
        <property name="gridName" value="DistEvtSch"/>
        <property name="serviceConfiguration">
            <array>
                <ref bean="serviceConfiguration"/>
            </array>
        </property>
        <property name="cacheConfiguration">
            <array>
                <ref bean="bucketCache"/>
            </array>
        </property>
        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">
                <property name="localAddress" value="127.0.0.1"/>
                <property name="localPort" value="12000"/>
                <property name="ipFinder">
                    <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                        <property name="addresses">
                            <bean class="com.walmartlabs.components.scheduler.utils.ConfiguredIPList">
                                <constructor-arg value="${ips.list}"/>
                            </bean>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="ignite" class="org.apache.ignite.IgniteSpringBean">
        <property name="configuration" ref="igniteConfiguration"/>
    </bean>

    <bean class="com.walmartlabs.components.scheduler.core.hz.HzEventReceiver"/>

</beans>