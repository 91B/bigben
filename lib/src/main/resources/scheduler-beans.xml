<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder
            location="classpath*:/environmentConfig/default/*.properties,classpath*:/environmentConfig/${com.walmart.platform.config.runOnEnv}/*.properties"/>

    <import resource="classpath*:platform-minimal.xml"/>

    <bean id="eventService" class="com.walmartlabs.components.scheduler.services.EventService"/>

    <bean id="bigbenDataManager" class="com.walmartlabs.components.scheduler.utils.BigbenDataManager">
        <constructor-arg index="0" value="ccm://${ccmProps}/dm-config"/>
    </bean>

    <bean id="eventScheduler" class="com.walmartlabs.components.scheduler.core.ScheduleScanner"/>
    <bean id="eventReceiver" class="com.walmartlabs.components.scheduler.input.EventReceiver"/>
    <bean id="bucketStore" class="com.walmartlabs.components.scheduler.entities.BucketStore"/>

    <bean id="hz" class="com.walmart.gmp.ingestion.platform.framework.core.Hz">
        <constructor-arg index="0" value="hz.xml.vm"/>
        <constructor-arg index="1" value="ccm://${ccmProps}/${hz.config}"/>
    </bean>

    <bean class="com.walmartlabs.components.core.services.ClusterSingleton">
        <constructor-arg index="0" ref="eventScheduler"/>
        <constructor-arg index="1" ref="hz"/>
    </bean>

    <bean id="eventProcessor" class="com.walmartlabs.components.scheduler.input.MessageProcessor"/>
    <bean id="kafkaConsumer"
          class="com.walmart.gmp.ingestion.platform.framework.messaging.kafka.consumer.KafkaConsumerBean">
        <constructor-arg index="0" value="${ccmProps}"/>
        <constructor-arg index="1" ref="eventProcessor"/>
    </bean>

    <bean class="com.walmartlabs.components.scheduler.processors.EventEnrichProcessor">
        <constructor-arg index="0" ref="processRegistry"/>
        <constructor-arg index="1" ref="bigbenDataManager"/>
    </bean>

</beans>