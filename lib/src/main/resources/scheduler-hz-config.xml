<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="dse-beans.xml"/>

    <bean id="eventScheduler" class="com.walmartlabs.components.scheduler.core.hz.HzEventScheduleScanner"/>
    <bean id="bucketStore" class="com.walmartlabs.components.scheduler.core.hz.HzBucketStore"/>

    <bean id="hz" class="com.walmart.gmp.ingestion.platform.framework.core.Hz">
        <constructor-arg index="0" value="scheduler-hz-config.xml.vm"/>
        <constructor-arg index="1" value="file://scheduler.hz.json"/>
    </bean>

    <bean class="com.walmart.gmp.ingestion.platform.framework.utils.ClusterSingleton">
        <constructor-arg index="0" ref="eventScheduler"/>
        <constructor-arg index="1" ref="hz"/>
    </bean>

</beans>